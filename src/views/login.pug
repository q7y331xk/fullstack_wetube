extends base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(placeholder="username",name="username", type="text", required)
        input(placeholder="password",name="password", type="password", required)
        input(type="submit", value="Login")
        br
        a(href="https://github.com/login/oauth/authorize?client_id=49e20526137109dc6315") Continue with Github &rarr;
    hr
    div 
        span Create new account? 
        a(href="/join") Join now &rarr;