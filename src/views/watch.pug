extends base

block content 
    div.watch#videoContainer(data-id=video._id)
        video(src=video.fileUrl style="width:400px;height:400px;")
        div#videoControls
            button#play Play 
            button#mute Mute 
            input#volume(type="range" min="0" value=1 max="1" step="0.1")
            div 
                span#currentTime 00:00
                span  / 
                span#totalTime 00:00
            div         
                input#timeLine(type="range" min="0" value="0" step="1")
            div 
                button#fullScreen Enter Full Screen
    if loggedIn
            div.video__comments-form
                form.video__comment-form#commentForm
                    textarea(cols="30", rows="10", placeholder="Write a nice comment...")
                    button Add Comment

    div.video__comments
        ul 
            each comment in video.comments.reverse()
                li=comment.text

block scripts 
    script(src="/static/js/videoPlayer.js") 
    if loggedIn
        script(src="/static/js/comment.js") 
    