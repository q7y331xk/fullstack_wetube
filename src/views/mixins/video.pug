mixin video(video)
    div.video__content
        div(style=`width:500px;height:500px;background-image:url(${video.thumbUrl});background-size:cover;background-position:center;`)
        h4
            a(href=`/videos/${video.id}`)=video.title
        p=video.description + " " + video.meta.views + " views"
        p=video.owner.username
        ul 
            each hashtag in video.hashtags
                li=hashtag
        small=video.createdAt
        
    hr