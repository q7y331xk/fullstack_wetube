mixin video(video)
    div.video__content
        div(style="display:flex;justify-content:center;align-items:center;width:200px;height:200px;background:aliceblue;")
            span fake thumbnail
        h4
            a(href=`/videos/${video.id}`)=video.title
        p=video.description + " " + video.meta.views + " views"
        p=video.owner.username
        ul 
            each hashtag in video.hashtags
                li=hashtag
        small=video.createdAt
        
    hr